{
  "name": "vdjdb-webpack",
  "version": "2.0.1",
  "description": "Webpack configuration for VDJdb-server",
  "private": true,
  "scripts": {
    "start": "node ./webpack/webpack.dev.server",
    "bundle": "npm run bundle:clean:all && npm run bundle:aot && npm run bundle:styles && npm run bundle:stats && npm run bundle:clean:build",
    "bundle:clean:all": "npm run bundle:clean:public && npm run bundle:clean:build",
    "bundle:clean:public": "rimraf ../../public/bundles/*",
    "bundle:aot": "npm run bundle:vendor && npm run bundle:ngc:factory && npm run bundle:ngc:prod && npm run bundle:closure",
    "bundle:vendor": "tsc -p vendor",
    "bundle:ngc:factory": "ngc -p tsconfig.ngfactory.json",
    "bundle:ngc:prod": "ngc -p tsconfig.prod.json",
    "bundle:closure": "node ./scripts/build.prod.js",
    "bundle:styles": "npm run bundle:webpack && npm run bundle:purify",
    "bundle:webpack": "webpack -p --config ./webpack/webpack.prod.config.js",
    "bundle:purify": "purifycss ../../public/bundles/bundle.css ../../public/bundles/bundle.min.js ./views/main.scala.html --min --out ../../public/bundles/bundle.min.css",
    "bundle:stats": "node ./scripts/stats.prod.js",
    "bundle:clean:build": "rimraf app/build && rimraf lib",
    "lint": "tslint --project tsconfig.prod.json --config tslint.json --type-check --force ./app/**/*",
    "postinstall": "node ./styles/semantic-fix.js"
  },
  "author": "Dmitry Bagaev",
  "homepage": "https://github.com/antigenomics/vdjdb-web-private",
  "devDependencies": {
    "@angular/compiler": "4.4.4",
    "@angular/compiler-cli": "4.4.4",
    "@angular/platform-browser-dynamic": "4.4.4",
    "@angular/common": "4.4.4",
    "@angular/core": "4.4.4",
    "@angular/forms": "4.4.4",
    "@angular/platform-browser": "4.4.4",
    "@angular/router": "4.4.4",
    "core-js": "2.5.1",
    "reflect-metadata": "0.1.10",
    "rxjs": "5.4.3",
    "zone.js": "0.8.17",
    "google-closure-compiler": "^20170409.0.0",
    "glob": "^7.1.2",
    "@types/angular": "1.6.32",
    "@types/node": "8.0.20",
    "@types/webpack": "3.0.12",
    "@types/uglify-js": "2.6.29",
    "@types/source-map": "0.5.1",
    "@ngtools/webpack": "1.7.2",
    "awesome-typescript-loader": "3.2.3",
    "angular2-template-loader": "0.6.2",
    "raw-loader": "0.5.1",
    "css-loader": "0.28.7",
    "style-loader": "0.18.2",
    "postcss-loader": "2.0.6",
    "less": "2.7.2",
    "less-loader": "4.0.5",
    "file-loader": "0.11.2",
    "url-loader": "0.5.9",
    "image-webpack-loader": "3.4.2",
    "extract-text-webpack-plugin": "3.0.0",
    "to-string-loader": "1.1.5",
    "typescript": "~2.2",
    "tslint": "5.7.0",
    "tslint-webpack-plugin": "1.0.0",
    "codelyzer": "3.2.0",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.9.1",
    "webpack-dll-bundles-plugin": "1.0.0-beta.5",
    "webpack-merge": "4.1.0",
    "purifycss": "1.2.6",
    "semantic-ui-less": "2.2.12",
    "uglifyjs-webpack-plugin": "0.4.6",
    "rimraf": "2.6.2",
    "console.table": "0.9.1",
    "gzip-size": "4.0.0",
    "md5-file": "3.2.3"
  },
  "engines": {
    "node": ">= 5",
    "npm": ">= 3"
  }
}
