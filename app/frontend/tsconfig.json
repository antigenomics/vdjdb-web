{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "typeRoots": [ "node_modules/@types" ],
    "types": [ "node" ],
    "noImplicitAny": true,
    "removeComments": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "allowJs": true
  },
  "exclude": [ "node_modules" ],
  "compileOnSave": false,
  "buildOnSave": false
}